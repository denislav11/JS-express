<main>
	<h1>Manage orders</h1>

	<div class="orders">
		<form method="post">

			{{#each orders}}
			<div class="order">
				<span class="order-time">{{this.dateOrderedOn}}</span>
				<span class="order-name">{{this.product.category}} doner, {{this.product.size}} cm</span>
				<span class="order-status">
					
							<select name="status" selected="{{this.status}}">
								<option value="pending">Pending</option>
								<option value="inProgress">In Progress</option>
								<option value="inTransit">In Transit</option>
								<option value="delivered">Delivered</option>							
							</select>
				</span>
				<input name="id" type="hidden" value="{{this._id}}">
				<a href="/orders/details/{{this._id}}" class="button order-button">Details</a>
			</div>
			{{/each}}
			<input type="submit" value="Save Changes" class="button" style="border:0">
		</form>
	</div>
</main>